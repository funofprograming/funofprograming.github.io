---
layout: base.njk
---
{% include "partials/nav.njk" %}
<main id="skip">
<header class="container">
<hgroup>
<h1><a href="{{page.url}}">{{title or site.title}}</a></h1>
<h2><em>{{description or site.description}}</em></h2>
</hgroup>
</header>
<div class="container">
<p>{%- for tag in tags | filterTagList %}{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
{% if tag %}<a href="{{ tagUrl }}"><small>{{ tag }}</small></a> {%- if not loop.last %} ,{% endif %}{% endif %}	{%- endfor %}</p>
</div>
<div class="container snls snts">
<heading-anchors>
{% if date %}<p><time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time></p>{% endif %}
{{ content | safe }}
</heading-anchors>
{% include "partials/pagination.njk" %}
</div>
</main>